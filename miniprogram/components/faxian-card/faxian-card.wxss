.container{
  background: #fff;
  position: relative;
  border-radius: 20px;
  box-shadow: -2px -2px 10px blueviolet;
  overflow: hidden;
}
.fbuser{
  border-radius: 40rpx;
  padding: 0 0 10px 0px;
  display: flex;
  justify-content: flex-end;
  opacity: 0.8;
}
.pic{
  border: solid 2rpx #030231;
  width: 50rpx;
  height: 50rpx;
  border-radius: 5px;
  margin-right: 50rpx;
  margin-left: 5px;
}

.itempic{
 width: 100%;
  border-radius: 20px;

}
.con{

  color: #000 ;
  border-radius: 30rpx;
  padding: 10rpx;
  margin: 30rpx;
  padding-left: 20rpx;
  display: flex;
  font-size: 15px;
  flex-wrap: wrap;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}
.time{
  display: block;
  font-size:25rpx;
  padding-top:20rpx;
}